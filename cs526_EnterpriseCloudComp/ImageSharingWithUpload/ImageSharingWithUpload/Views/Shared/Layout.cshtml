<!DOCTYPE html>

<html lang="en">
<head id="head">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    <title> @ViewBag.Title </title>

    @*
    @Styles.Render("~/Content/css")
    *@

    @{ 
        var SiteCss = (ViewBag.isADA ?? false) ? "Site_ADA.css" : "Site.css";
        var SiteCssUrl = Url.Content("~/Content/" + SiteCss);
    }
    <link href="@SiteCssUrl" rel="stylesheet" type="text/css" />

    @*
    @Scripts.Render("~/bundles/modernizr")
    *@
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")"></script>

</head>

<body class="twoColumnHdrFtr">
    <div id="container">
        <header id="header">
            <h1><img alt="[Jive Talkin' Choirboy]" src="@Url.Content("~/Content/Images/jive-talkin-choirboy.png")" /></h1>
        </header>
        
        <nav id="nav">
            <ul>
                <li>@Html.ActionLink("Register","Register")</li>
                <li>@Html.ActionLink("Upload","Upload")</li>
                <li>@Html.ActionLink("Query","Query")</li>
            </ul>
        </nav>
        
        <aside id="sidebar">
            <h1>Links</h1>
            <!--<p><a href="http://www.dominicduggan.org">My home page</a></p>-->
            <p><a href="http://www.stevens.edu">Stevens home page</a></p>
        </aside>
        <article id="content">
            @RenderBody()
        </article>
        <footer id="footer">
             <p>&copy; @DateTime.Now.Year Josh Gribbon</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
