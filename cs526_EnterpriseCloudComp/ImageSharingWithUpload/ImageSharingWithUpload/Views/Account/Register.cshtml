
@{
    ViewBag.Title = "Registration";
}

<h2>@ViewBag.Title</h2>

@{ Html.BeginForm("Register", "Account", FormMethod.Post); }

<fieldset>
    <legend>User Information</legend>
    <p>
        Select an ID for your user:
        @Html.TextBox("UserID")
    </p>
    <p>
        Are you visually impaired?
        @Html.CheckBox("ADA")
    </p>
    <input type="submit" value="Register" />
</fieldset>

@{ Html.EndForm(); }