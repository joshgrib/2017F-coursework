@model List<ImageSharingWithAuth.Models.SelectItemView>

@{
    ViewBag.Title = "Delete Users";
}

<h2>@ViewBag.Title</h2>

@{ Html.BeginForm("Delete", "Account", FormMethod.Post; }

@Html.AntiForgeryToken();

<fieldset>
    <legend>Deactivate/Reactivate Users</legend>
    
    <table class="gridTable">
        <tr>
            <th>Deactivate</th>
            <th>User</th>
        </tr>
        
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>
                    @Html.HiddenFor(us => us[i].Id)
                    @Html.CheckBoxFor(us => us[i].Checked)
                </td>
                <td>
                    @Html.DisplayFor(us => us[i].Name)
                </td>
            </tr>
        }
    </table>


    <p>
        <input type="submit" value="Submit" />
    </p>
</fieldset>

@ViewBag.Message

@{ Html.EndForm(); }