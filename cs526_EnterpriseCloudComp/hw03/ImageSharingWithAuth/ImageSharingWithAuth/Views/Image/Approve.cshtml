@model List<ImageSharingWithAuth.Models.SelectItemView>

@{
    ViewBag.Title = "Approve Images";
}

<h2>@ViewBag.Title</h2>

@{ Html.BeginForm("Approve", "Images", FormMethod.Post; }

@Html.AntiForgeryToken()

<fieldset>
    <legend>Approve Images</legend>

    <table class="gridTable">
        <tr>
            <th>Approve</th>
            <th>Images</th>
        </tr>

        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>
                    @Html.HiddenFor(img => img[i].Id)
                    @Html.CheckBoxFor(img => img[i].Checked)
                </td>
                <td>
                    @Html.DisplayFor(img => img[i].Name)
                </td>
            </tr>
        }
    </table>


    <p>
        <input type="submit" value="Submit" />
    </p>
</fieldset>

@ViewBag.Message

@{ Html.EndForm(); }