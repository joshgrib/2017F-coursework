
@{
    ViewBag.Title = "Upload an Image";
}

<h2>@ViewBag.Title</h2>

@{ Html.BeginForm("Upload", "Image", FormMethod.Post,
                    new { enctype = "multipart/form-data" }); }

@Html.AntiForgeryToken()

<fieldset>
    <legend>Enter Image Information</legend>
    <p>
        Caption: @Html.TextBox("Caption")
                 @Html.ValidationMessage("Caption")
    </p>
    <p>
        Select A Tag: @Html.DropDownList("TagId", ViewBag.Tags as SelectList)
    </p>
    <p>
        Description:<br />
        @Html.TextArea("Description", "Enter a Description Here", 5, 40, null)
        @Html.ValidationMessage("Description")
    </p>
    <p>
        Date Taken: @Html.TextBox("DateTaken")
                    @Html.ValidationMessage("DateTaken")
    </p>
    <p>
        <input type="file"  name="ImageFile" />
    </p>

    <input type="submit" value="Upload" />
</fieldset>

<p>@ViewBag.Message</p>
<p>@Html.ValidationSummary()</p>

@{ Html.EndForm(); }