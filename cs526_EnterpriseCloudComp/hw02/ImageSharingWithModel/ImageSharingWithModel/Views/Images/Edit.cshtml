@model ImageSharingWithModel.Models.ImageView

@{
    ViewBag.Title = "Edit Image";
}

<h2>@ViewBag.Title</h2>

@{ Html.BeginForm("Edit", "Images", FormMethod.Post ); }

<fieldset>
    <legend>Edit Image Information</legend>

    <p><img src="@Url.Content("~/Content/Images/img-" + @Model.Id + ".jpg")"</p>

    @Html.HiddenFor(m => m.Id)

    <p>
        Caption: @Html.TextBoxFor(m => m.Caption)
                 @Html.ValidationMessageFor(m => m.Caption)
    </p>
    <p>Select a tag: @Html.DropDownList("TagId", ViewBag.Tags as SelectList)</p>
    <p>
        Description: <br />
        @Html.TextAreaFor(m => m.Description,
                        @*"Enter description here",*@ 5, 40, null)
        @Html.ValidationMessageFor(m => m.Description)
    </p>
    <p>
        Date Taken: @Html.TextBoxFor(m => m.DateTaken)
                    @Html.ValidationMessageFor(m => m.DateTaken)
    </p>
    <p>
        <input type="submit" value="Submit Changes" />
    </p>
</fieldset>

<p>@ViewBag.Message</p>
<p>@Html.ValidationSummary()</p>

@{ Html.EndForm(); }