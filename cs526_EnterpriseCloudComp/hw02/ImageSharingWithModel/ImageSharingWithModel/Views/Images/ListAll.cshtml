@model IEnumerable<ImageSharingWithModel.Models.Image>

@{
    ViewBag.Title = "All Images";
}

<h2>@ViewBag.Title</h2>

<table>
    <tr>
        <th>Caption</th>
        <th>Uploader</th>
        <th>Tag</th>
        <th>Actions</th>
    </tr>

    @foreach (var image in Model)
    {
        <tr>
            <td>@image.Caption</td>
            <td>@image.User.UserId</td>
            <td>@image.Tag.Name</td>
            <td>
                @Html.ActionLink("Details", "Details", new { Id = image.Id })
                @if (ViewBag.UserId.Equals(image.User.UserId))
                {
                    <text>
                    @Html.ActionLink("Edit", "Edit", new { Id = image.Id })
                    @Html.ActionLink("Delete", "Delete", new { Id = image.Id })
                    </text>
                }
            </td>
        </tr>
    }
</table>